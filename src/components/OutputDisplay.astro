---
interface Props {
	title?: string
}

const { title } = Astro.props
---

<div
	class='my-4 p-4 rounded-md bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 shadow-md'
>
	{title && <div class='mb-2 font-semibold text-sm'>{title}</div>}
	<label class='block text-xs text-gray-700 dark:text-gray-300 mb-1'>Output:</label>
	<pre
		class='whitespace-pre-wrap font-mono text-sm p-2 bg-transparent text-gray-900 dark:text-gray-100'><slot /></pre>
</div>
